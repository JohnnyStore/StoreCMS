
<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">业务信息</a>
    </li>
    <li class="active">每日抢购</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      业务信息
      <small>
        <i class="icon-double-angle-right"></i>
        每日抢购
      </small>
    </h1>
  </div><!-- /.page-header -->

  <div class="row" id="app">
    <div class="col-xs-12">
      <button type="button" class="btn btn-primary" @click="onAdd()" data-toggle="modal">
        <i class="icon-plus"></i>
        添加
      </button>
      <!--<button type="button" class="btn btn-success" @click="onShowSearch()" data-toggle="modal">-->
        <!--<i class="icon-search"></i>-->
        <!--查询-->
      <!--</button>-->
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              抢购编号
            </th>
            <th>商品编码</th>
            <th>商品</th>
            <th>图片</th>
            <th>抢购时间</th>
            <th>抢购价格RMB</th>
            <th>抢购价格USD</th>
            <th>当前状态</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">{{this.snapUpID}}</td>
              <td><input type="hidden" value="{{this.itemID}}">{{this.itemCode}}</td>
              <td>
                {{this.itemShortDescriptionCN}}
              </td>
              <td>
                <img src="{{this.itemImageUrl}}" class="img-responsive" style="height: 60px">
              </td>
              <td>{{this.snapUpDate}}</td>
              <td>{{this.snapUpPrice4RMB}}</td>
              <td>{{this.snapUpPrice4USD}}</td>
              <td>
                <input type="hidden" value="{{this.status}}">
                {{this.statusText}}
              </td>
              <td>{{this.inUser}}</td>
              <td>{{this.inDate}}</td>
              <td>{{this.lastEditUser}}</td>
              <td>{{this.lastEditDate}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <a class="green" href="#" @click="onChange({{@index}})">
                    <i class="icon-pencil bigger-130"></i>
                  </a>
                  <a class="red" href="#" @click="onDelete('{{this.snapUpID}}', '{{this.itemShortDescriptionCN}}')">
                    <i class="icon-trash bigger-130"></i>
                  </a>
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/dailySnapUp?page={{prePageNum}}">
                  <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/dailySnapUp?page={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/dailySnapUp?page={{nextPageNum}}">
                  <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}

      <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">每日抢购编辑</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group" v-if="snapUpID !== ''">
                  <label for="inputEmail3" class="col-sm-2 control-label">热销编号</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">\{{snapUpID}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">热销商品</label>
                  <div class="col-sm-3 no-padding-right">
                    <input type="text" class="form-control" maxlength="25" v-model="itemCode" @blur="onItemCodeBlur()" placeholder="输入商品编码"/>
                  </div>
                  <div class="col-sm-7 no-padding-left">
                    <input type="hidden" v-model="itemID">
                    <input type="text" class="form-control" maxlength="25" v-model="itemName" readonly="readonly"/>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">抢购日期</label>
                  <div class="col-sm-10">
                    <input type="date" class="form-control" v-model="snapUpDate"/>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">抢购价格(RMB)</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" v-model="snapUpPrice4RMB"/>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-2 control-label">抢购价格(USD)</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" v-model="snapUpPrice4USD"/>
                  </div>
                </div>

                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">热销状态</label>
                  <div class="col-sm-10">
                    <select class="form-control" v-model="selectedStatus">
                      <option value="">请选择状态</option>
                      <option value="A">激活</option>
                      <option value="F">禁止</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10 col-sm-offset-2">
                    <div class="alert alert-warning alert-dismissible hidden" role="alert">
                      <strong>提示!</strong>
                      <span></span>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" :disabled="!enabledSave" @click="onSave">保存</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>

    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/dailySnapUp.js"></script>