
<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">基本信息</a>
    </li>
    <li class="active">商品系列管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      基本信息
      <small>
        <i class="icon-double-angle-right"></i>
        商品系列信息维护
      </small>
    </h1>
  </div><!-- /.page-header -->

  <div class="row" id="app">
    <div class="col-xs-12">
      <button type="button" class="btn btn-primary" @click="onAdd" data-toggle="modal">
        <i class="icon-plus"></i>
        添加
      </button>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="itemSeries-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              商品系列编号
            </th>
            <th>商品系列名称（中文）</th>
            <th>商品系列名称（英文）</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">{{this.seriesID}}</td>
              <td>{{this.itemSeriesCN}}</td>
              <td>{{this.itemSeriesEN}}</td>
              <td>{{this.inUser}}</td>
              <td>{{this.inDate}}</td>
              <td>{{this.lastEditUser}}</td>
              <td>{{this.lastEditDate}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <a class="green" href="#" @click="onChange({{@index}})">
                    <i class="icon-pencil bigger-130"></i>
                  </a>
                  <a class="red" href="#" @click="onDelete('{{this.seriesID}}', '{{this.itemSeriesCN}}')">
                    <i class="icon-trash bigger-130"></i>
                  </a>
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/itemSeries?page={{prePageNum}}">
                  <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/itemSeries?page={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/itemSeries?page={{nextPageNum}}">
                  <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}

      <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">商品系列信息编辑</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group" v-if="seriesID !== ''">
                  <label for="inputEmail3" class="col-sm-3 control-label">商品系列编号</label>
                  <div class="col-sm-9">
                    <p class="form-control-static">\{{seriesID}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-3 control-label">商品系列中文</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" maxlength="15" v-model="itemSeriesNameCN" @blur="onItemSeriesCNBlur()">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-3 control-label">商品系列英文</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" maxlength="25" v-model="itemSeriesNameEN" @blur="onItemSeriesENBlur()"/>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputPassword3" class="col-sm-3 control-label"> </label>
                  <div class="col-sm-9">
                    <div class="alert alert-warning alert-dismissible hidden" role="alert">
                      <strong>提示!</strong>
                      <span></span>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary"
                      data-container="body" data-toggle="popover" data-placement="top"
                      data-content="" :disabled="!enabledSave" @click="onSave">保存</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/itemSeries.js"></script>