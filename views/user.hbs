<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">基本信息</a>
    </li>
    <li class="active">个人信息编辑</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      基本信息
      <small>
        <i class="icon-double-angle-right"></i>
        个人信息编辑
      </small>
    </h1>
  </div>
  <div class="row">
    <div class="col-md-12" id="app">
      <div style="margin: 35px auto; width: 800px;">
        <form class="form-horizontal">
          <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" maxlength="15" v-model="userName">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">账号</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" maxlength="15" v-model="account" @blur="onUserNameBlur()">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">电话</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" maxlength="11" v-model="cellphone" @blur="onCellphoneBlur()">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">邮箱</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" maxlength="50" v-model="email" @blur="onEmailBlur()">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" maxlength="15" v-model="password">
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">确认密码</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" maxlength="15" v-model="confirmPassword" @blur="onConfirmPasswordBlur()">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="button" :disabled="!enabledSave" class="btn btn-primary btn-block" @click="onSave()">提交</button>
            </div>
          </div>
          <div class="col-sm-offset-2 col-sm-10 alert alert-warning alert-dismissible hidden" role="alert">
            <strong>提示!</strong>
            <span></span>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/javascripts/view/user.js"></script>